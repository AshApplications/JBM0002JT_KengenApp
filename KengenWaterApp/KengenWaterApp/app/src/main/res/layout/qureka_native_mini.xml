<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/bg_native"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="1dp"
        android:paddingEnd="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/qurekaAds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qureka_inter1" />

                <ImageView
                    android:id="@+id/qurekaAds1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/qureka_inter1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/icone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gif_inter_round"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/qureka_round1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_2sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cv_ad_text"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_9sdp"
                                        android:gravity="center"
                                        app:cardBackgroundColor="@color/colorMain"
                                        app:cardCornerRadius="@dimen/_2sdp">

                                        <TextView
                                            android:id="@+id/tv_ad_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/mfont_medium"
                                            android:gravity="center"
                                            android:text="AD"
                                            android:textColor="#ffffff"
                                            android:textSize="@dimen/_6ssp" />
                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/ad_headline"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/mfont_medium"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:text="Play &amp; Win Coins"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_9ssp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/ad_body"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:ellipsize="end"
                                        android:fontFamily="@font/mfont_medium"
                                        android:gravity="top"
                                        android:maxLines="2"
                                        android:text="Win 5,00,000 Coins &amp; More"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_9ssp" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/ad_call_to_action"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/bg_button"
                        android:layout_marginStart="@dimen/_35sdp"
                        android:fontFamily="@font/mfont_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Open"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>